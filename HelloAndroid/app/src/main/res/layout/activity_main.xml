<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0cf72b"
    tools:context="com.example.varun.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_alignStart="@+id/text3"
        android:layout_below="@+id/image"
        android:paddingLeft="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Udacity"
        android:textColor="#000000"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/text"
        android:paddingLeft="20dp"
        android:fontFamily="sans-serif-light"
        android:text="2465 Latham St"
        android:textColor="#000000"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text1"
        android:layout_below="@+id/text1"
        android:paddingLeft="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Mountain View, CA 94043"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text2"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="20dp"
        android:text="650-555-5555"
        android:textColor="#000000"
        android:textSize="40sp" />

</RelativeLayout>
